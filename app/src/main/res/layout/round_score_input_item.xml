<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#0D000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/playerNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Joueur"
                android:textColor="@color/text_main_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="142 pts"
                android:textColor="@color/text_muted_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Hidden for automatic mode, but kept for compatibility -->
            <CheckBox
                android:id="@+id/winnerCheckbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/scoreInput"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/bg_score_input"
                android:gravity="center"
                android:hint="0"
                android:fontFamily="sans-serif-black"
                android:inputType="numberSigned"
                android:textColor="@color/text_main_light"
                android:textSize="22sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGhalta"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:text="GHALTA"
                android:textStyle="bold"
                android:textSize="12sp"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/primary"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

        <!-- Container for Quick Actions (Loser/Winner specific) -->
        <LinearLayout
            android:id="@+id/quickActionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Loser section -->
            <LinearLayout
                android:id="@+id/loserInputSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Can add quick points here if needed -->
            </LinearLayout>

            <!-- Winner section (Automated) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWin10"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="-10"
                android:visibility="gone"
                app:strokeColor="@color/success"
                android:textColor="@color/success"
                app:cornerRadius="10dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWin20"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="-20"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                app:strokeColor="@color/success"
                android:textColor="@color/success"
                app:cornerRadius="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWinRalta"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="RALTA"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                app:strokeColor="@color/success"
                android:textColor="@color/success"
                app:cornerRadius="10dp" />
                
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
