<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="12dp"
    android:background="@drawable/item_background_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <CheckBox
            android:id="@+id/winnerCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gagnant"
            android:textSize="12sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/playerNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Joueur"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/currentScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 pts"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- Loser Input Section -->
    <LinearLayout
        android:id="@+id/loserInputSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/scoreInput"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:hint="Entrez les points"
                android:inputType="number"
                android:paddingHorizontal="12dp"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="8dp">

                <Button
                    android:id="@+id/btnGhalta"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ghalta"
                    android:padding="0dp"
                    android:minWidth="60dp"
                    android:textSize="12sp" />

                <!-- Placeholder for winner buttons (10, 20, Ralta) which will be handled in code -->
                <Button
                    android:id="@+id/btnWin10"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="44dp"
                    android:layout_height="40dp"
                    android:text="10"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnWin20"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="44dp"
                    android:layout_height="40dp"
                    android:text="20"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnWinRalta"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ralta"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:minWidth="60dp"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Winner Options Section -->
    <LinearLayout
        android:id="@+id/winnerOptionsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="12dp">

        <RadioGroup
            android:id="@+id/winTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal (-10)"
                android:checked="true"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioRalta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ralta"
                android:textSize="12sp"
                android:layout_marginStart="16dp" />
            
            <EditText
                android:id="@+id/raltaScoreInput"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:hint="Pts"
                android:inputType="number"
                android:paddingHorizontal="8dp"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
